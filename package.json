{
  "name": "solace-message-client",
  "scripts": {
    "before-push": "run-s build lint test:headless e2e:headless",
    "build": "run-s **:*:build",
    "lint": "run-p **:*:lint",
    "test": "run-s **:*:test",
    "test:headless": "cross-env HEADLESS=true run-s **:*:test",
    "e2e": "run-s **:*:e2e",
    "e2e:headless": "cross-env HEADLESS=true run-s **:*:e2e",
    "e2e:ci": "cross-env HEADLESS=true run-s **:*:e2e-ci",
    "pre:e2e": "npx webdriver-manager update --versions.chrome=100.0.4896.60",
    "pre:e2e-ci": "npx webdriver-manager update --versions.chrome=100.0.4896.60",
    "changelog": "conventional-changelog -k projects/solace-message-client -p angular -i CHANGELOG.md -s && markdown-include docs/site/changelog/changelog.template.json",

    "solace-message-client:lint": "ng lint solace-message-client",
    "solace-message-client.e2e:lint": "ng lint solace-message-client.e2e",
    "solace-message-client:test": "ng test solace-message-client",
    "solace-message-client:build": "ng build --configuration production solace-message-client",
    "solace-message-client:e2e": "ng e2e solace-message-client.e2e",
    "solace-message-client:e2e-ci": "run-p -r solace-message-client-testing-app:http-server solace-message-client-testing-app:await-then-protractor",
    "solace-message-client:protractor": "ng e2e solace-message-client.e2e --dev-server-target",
    "solace-message-client:typedoc": "typedoc --plugin typedoc-plugin-extras --tsconfig projects/solace-message-client/tsconfig.lib.prod.typedoc.json --favicon resources/branding/favicon.ico",

    "solace-message-client-testing-app:serve": "ng serve solace-message-client-testing-app",
    "solace-message-client-testing-app:http-server": "cd dist/solace-message-client-testing-app && http-server --silent --port 4200",
    "solace-message-client-testing-app:lint": "ng lint solace-message-client-testing-app",
    "solace-message-client-testing-app:build": "ng build --configuration=production solace-message-client-testing-app",
    "solace-message-client-testing-app:await": "wait-on http-get://localhost:4200",
    "solace-message-client-testing-app:await-then-protractor": "run-s solace-message-client-testing-app:await solace-message-client:protractor"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "13.3.2",
    "@angular/cdk": "13.3.2",
    "@angular/common": "13.3.2",
    "@angular/compiler": "13.3.2",
    "@angular/core": "13.3.2",
    "@angular/forms": "13.3.2",
    "@angular/material": "13.3.2",
    "@angular/platform-browser": "13.3.2",
    "@angular/platform-browser-dynamic": "13.3.2",
    "@angular/router": "13.3.2",
    "@scion/toolkit": "13.0.0-beta.2",
    "pako": "2.0.4",
    "rxjs": "7.5.5",
    "solclientjs": "10.10.0",
    "tslib": "2.3.1",
    "zone.js": "0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "13.3.2",
    "@angular-eslint/builder": "13.2.0",
    "@angular-eslint/eslint-plugin": "13.2.0",
    "@angular-eslint/eslint-plugin-template": "13.2.0",
    "@angular-eslint/schematics": "13.2.0",
    "@angular-eslint/template-parser": "13.2.0",
    "@angular/cli": "13.3.2",
    "@angular/compiler-cli": "13.3.2",
    "@types/events": "3.0.0",
    "@types/jasmine": "4.0.2",
    "@types/long": "4.0.1",
    "@types/node": "17.0.23",
    "@types/pako": "1.0.3",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "conventional-changelog-cli": "2.2.2",
    "cross-env": "7.0.3",
    "eslint": "8.12.0",
    "eslint-plugin-deprecation": "1.3.2",
    "eslint-plugin-rxjs": "5.0.2",
    "http-server": "14.1.0",
    "jasmine-core": "4.0.1",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.3.17",
    "karma-chrome-launcher": "3.1.1",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "4.0.2",
    "karma-jasmine-html-reporter": "1.7.0",
    "markdown-include": "0.4.3",
    "ng-packagr": "13.3.0",
    "npm-run-all": "4.1.5",
    "protractor": "7.0.0",
    "puppeteer": "13.5.2",
    "ts-node": "10.7.0",
    "typedoc": "0.22.14",
    "typedoc-plugin-extras": "2.2.3",
    "typescript": "4.6.3",
    "wait-on": "6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solacecommunity/angular-solace-message-client.git"
  }
}
