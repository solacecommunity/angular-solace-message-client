{
  "name": "solace-message-client",
  "scripts": {
    "before-push": "run-s build lint test:headless e2e:headless",
    "build": "run-s **:*:build",
    "lint": "run-p **:*:lint",
    "test": "run-s **:*:test",
    "test:headless": "cross-env HEADLESS=true run-s **:*:test",
    "e2e": "run-s **:*:e2e",
    "e2e:headless": "cross-env HEADLESS=true run-s **:*:e2e",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && markdown-include docs/site/changelog/changelog.template.json",
    "postinstall": "ngcc",

    "solace-message-client:lint": "ng lint solace-message-client",
    "solace-message-client.e2e:lint": "ng lint solace-message-client.e2e",
    "solace-message-client:test": "ng test solace-message-client",
    "solace-message-client:build": "ng build --configuration production solace-message-client",
    "solace-message-client:e2e": "npx webdriver-manager update --versions.chrome=91.0.4472.19 && ng e2e solace-message-client.e2e",
    "solace-message-client:e2e-ci": "cross-env HEADLESS=true run-p -r solace-message-client-testing-app:http-server solace-message-client-testing-app:await-then-protractor",
    "solace-message-client:protractor": "npx webdriver-manager update --versions.chrome=91.0.4472.19 && ng e2e solace-message-client.e2e --dev-server-target",
    "solace-message-client:typedoc": "typedoc --plugin typedoc-plugin-extras --tsconfig projects/solace-message-client/tsconfig.lib.prod.typedoc.json --favicon resources/branding/favicon.ico",

    "solace-message-client-testing-app:serve": "ng serve solace-message-client-testing-app",
    "solace-message-client-testing-app:http-server": "cd dist/solace-message-client-testing-app && http-server --silent --port 4200",
    "solace-message-client-testing-app:lint": "ng lint solace-message-client-testing-app",
    "solace-message-client-testing-app:build": "ng build --configuration=production solace-message-client-testing-app",
    "solace-message-client-testing-app:await": "wait-on http-get://localhost:4200",
    "solace-message-client-testing-app:await-then-protractor": "run-s solace-message-client-testing-app:await solace-message-client:protractor"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.2.4",
    "@angular/cdk": "12.2.4",
    "@angular/common": "12.2.4",
    "@angular/compiler": "12.2.4",
    "@angular/core": "12.2.4",
    "@angular/forms": "12.2.4",
    "@angular/material": "12.2.4",
    "@angular/platform-browser": "12.2.4",
    "@angular/platform-browser-dynamic": "12.2.4",
    "@angular/router": "12.2.4",
    "@scion/toolkit": "12.0.0-beta.2",
    "pako": "2.0.4",
    "rxjs": "6.6.7",
    "solclientjs": "10.7.0",
    "tslib": "2.3.1",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.4",
    "@angular-eslint/builder": "12.3.1",
    "@angular-eslint/eslint-plugin": "12.3.1",
    "@angular-eslint/eslint-plugin-template": "12.3.1",
    "@angular-eslint/schematics": "12.3.1",
    "@angular-eslint/template-parser": "12.3.1",
    "@angular/cli": "12.2.4",
    "@angular/compiler-cli": "12.2.4",
    "@types/jasmine": "3.8.2",
    "@types/node": "15.6.1",
    "@types/pako": "1.0.2",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "conventional-changelog-cli": "2.1.1",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-plugin-deprecation": "1.2.1",
    "eslint-plugin-rxjs": "3.3.7",
    "http-server": "13.0.1",
    "jasmine-core": "3.8.0",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.3.4",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "2.0.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.7.0",
    "markdown-include": "0.4.3",
    "ng-packagr": "12.2.1",
    "npm-run-all": "4.1.5",
    "protractor": "7.0.0",
    "puppeteer": "9.1.1",
    "ts-node": "10.0.0",
    "typedoc": "0.21.9",
    "typedoc-plugin-extras": "1.1.8",
    "typescript": "4.3.5",
    "wait-on": "6.0.0"
  }
}
